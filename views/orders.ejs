<!DOCTYPE html>
<html>
<head>
    <title>My Orders</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Supermarket App</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/shopping">Shop</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/cart">Cart</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/orders">My Orders</a>
        </li>
        <% if (user && user.role === 'admin') { %>
          <li class="nav-item">
            <a class="nav-link" href="/inventory">Inventory</a>
          </li>
        <% } %>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container mt-4">
    <h2>My Orders</h2>

    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(error) { %>
          <p class="mb-0"><%= error %></p>
        <% }); %>
      </div>
    <% } %>

    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success">
        <% messages.forEach(function(message) { %>
          <p class="mb-0"><%= message %></p>
        <% }); %>
      </div>
    <% } %>

    <% if (!orders || orders.length === 0) { %>
      <p>You have not placed any orders yet.</p>
      <a href="/shopping" class="btn btn-primary">Start Shopping</a>
    <% } else { %>
      <table class="table table-bordered mt-3">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Total Amount</th>
            <th>Invoice</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(function(order) { %>
            <tr>
              <td><%= order.id %></td>
              <td><%= order.orderDate.toLocaleString ? order.orderDate.toLocaleString() : order.orderDate %></td>
              <td>$<%= order.totalAmount.toFixed ? order.totalAmount.toFixed(2) : order.totalAmount %></td>
              <td>
                <a href="/orders/<%= order.id %>" class="btn btn-sm btn-primary">View Invoice</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
</div>
</body>
</html>